logfacility        local0
debug 0
use_logd on
bcast        eth0                # Linux

deadtime 10
initdead 60
keepalive 1
warntime 3

auto_failback off
node        rack-forward
node        not-backward
ping	18.181.0.1
crm on
apiauth cibmon uid=hacluster
respawn hacluster /usr/lib/heartbeat/cibmon -d

